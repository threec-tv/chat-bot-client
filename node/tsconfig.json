{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "types": [
            "reflect-metadata",
        ],
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*",
        "test/**/*",
        "node_modules/@types/jest/index.d.ts"
    ]
}
