{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "types": [
            "reflect-metadata",
            "mocha",
            "chai"
        ],
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@controllers/*": [
                "./src/controllers"
            ],
            "@service/*": [
                "./src/service"
            ],
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}